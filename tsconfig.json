{
  "compilerOptions": {
    "target": "ES2017",            // ✅ required for async/await
    "module": "ESNext",            // ✅ allows top-level await
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}